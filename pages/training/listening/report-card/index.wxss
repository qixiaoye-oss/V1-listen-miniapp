/* 覆盖全局 page 的 padding-bottom，避免与内容区域 padding-bottom 叠加 */
page {
  padding-bottom: 0;
}

/* 页面容器 */
.report-card-page {
  box-sizing: border-box;
  position: relative;
}

/* 内容区域 - 动态 padding-bottom 由 buttonGroupHeight behavior 计算 */
.report-card-page__content {
  box-sizing: border-box;
}

.header_container {
  border: var(--btn-border-theme-1);
  box-sizing: border-box;
  border-radius: 9px;
  margin-bottom: 15px;
  line-height: 1;
}

.header_title {
  display: flex;
  flex-direction: row;
  gap: 10px;
  padding: 15px;
}

.report-card {
  border: 1px solid var(--theme-color);
  border-radius: 9px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 15px;
}

/* 最后一个 report-card 不需要 margin-bottom，由 padding-bottom 的 gap 提供间距 */
.report-card:last-child {
  margin-bottom: 0;
}

.question {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 15px;
}

.question__no {
  background-color: var(--theme-bcakground-color);
  color: var(--theme-color);
  flex-shrink: 0;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 3px;
  font-size: 12px;
}

.question__user-answer {
  flex-grow: 1;
  font-size: 14px;
}

.answer_wrong {
  color: #F8312F;
}

.right-answers {
  color: var(--theme-color);
  font-weight: bold;
  line-height: 1.4;
  font-size: 16px;
  padding-left: 38px;
  margin-top: 10px;
}

/* 纯文字层样式已统一使用 .btn-text-content（见 style/button-group.wxss） */