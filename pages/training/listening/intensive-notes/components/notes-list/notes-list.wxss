/* 引入样式 */
@import "/style/tag.wxss";
@import "/style/button-group.wxss";

.label-list-base-container {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 20px;
  padding-bottom: 0; /* 底部由按钮组高度控制 */
  box-sizing: border-box;
}

/* 外层灰色边框 */
/* height 由 contentAreaHeight - 20 动态设置（减去容器顶部 padding），确保底边与 hint_banner 间距 15px */
.outer-frame {
  width: 100%;
  height: calc(100% - var(--button-group-total-height-single-with-hint)); /* 默认值：单层+hint */
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  box-sizing: border-box;
  overflow: hidden;
}

/* 显示部分 */
.label-list-container {
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-inline: 15px;
}

/* 列表顶部间距 */
.list-top-spacer {
  height: 15px;
  flex-shrink: 0;
}

/* 列表底部间距（item-spacing 已提供 15px，此处无需额外间距） */
.list-bottom-spacer {
  height: 0;
  flex-shrink: 0;
}

.label-item-cell {
  /* 左右间距已由父容器 padding 提供 */
}

.big-sentence-cell {
  border: 1px solid var(--solid-border-color);
  border-radius: 6px;
  padding: 15px 15px;
}

.active {
  border-color: var(--border-color-1);
}

.sentence-label-cell {
  position: relative;
}

.content-cell {
  /* 样式由 sentence-block 组件自包含 */
}

/* 我的听写 */
.answer-cell {
  border: 1px dashed var(--solid-border-color);
  margin-top: 15px;
  margin-bottom: 15px;
  position: relative;
  padding: 15px;
}

.answer-title {
  font-size: 12px;
  line-height: 1;
  color: var(--solid-border-color);
  margin-bottom: 10px;
}

.label-content-cell {
  font-size: 16px;
  line-height: 1.4;
  overflow: hidden;
}

.hidden__ {
  background-color: var(--background-color-6);
}

.hidden_ {
  opacity: 0;
}

.edit-but {
  margin-top: 10px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 14px;
  color: var(--solid-border-color);
}

/* 功能按钮 */
.buts-cell {
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.buts-cell view {
  margin-left: 10px;
}

.buts-cell view:first-child {
  margin-left: 0;
}

/* 右侧按钮组与左侧元素（如"有订正"标签）间距 15px */
.buts-cell .btn-pos-right {
  margin-left: 15px;
}



/* 复习按钮 */
.again-buts-cell {
  margin-top: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}

.again-but {
  border: 1px solid var(--border-color-4);
  border-radius: 6px;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  padding-inline: 10px;
  margin-left: 10px;
  box-sizing: border-box;
}

.but-warning {
  color: rgba(248, 49, 47, 1);
  border: 1px solid rgba(248, 49, 47, 1);
}

.warning-bg {
  background: rgba(248, 49, 47, 0.15);
  border-color: transparent;
}

.but-success {
  border: 1px solid var(--main-green-color);
  color: var(--main-green-color);
}

.success-bg {
  background: var(--main-green-color-bg);
  border-color: transparent;
}

.state {
  height: 40px;
  line-height: 40px;
  padding-inline: 10px;
  border-radius: 6px;
  margin-right: auto;
}

.but-animation {
  animation-name: butChange;
  animation-duration: 0.3s;
}

@keyframes butChange {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1);
  }
}

/* 列表项间距 */
.item-spacing {
  height: 15px;
}

/* ==================== PC/PAD 横屏适配 ==================== */
/* 横屏时限制按钮组宽度在组件范围内（组件宽度为 35%） */
@media screen and (min-aspect-ratio: 1/1) {
  .btn-page-bottom {
    /* 组件宽度为 35%，left 保持 20px */
    /* right = 100% - 35% + 20px = 65% + 20px */
    right: calc(65% + 20px);
  }
}