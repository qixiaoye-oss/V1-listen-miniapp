page {
  padding-top: 0;
  padding-bottom: 0;
  position: relative;
}

/* 顶部线性进度条（保留但隐藏，已弃用） */
.progress-box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 2px;
  display: none;
}

image {
  width: 17px;
  height: 17px;
}

text {
  line-height: 1;
}

/* 页面内容区域 - 动态 padding-bottom 由 buttonGroupHeight behavior 计算 */
.page {
  min-height: 100vh;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 15px;
  position: relative;
}

.header_container {
  margin-top: 20px;
  width: 100%;
  /* height: 10%; */
  border: var(--btn-border-theme-1);
  box-sizing: border-box;
  border-radius: 9px;
}

.header_title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  padding: 15px;
  line-height: 1;
}

.header_title_right {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
}

.toggle_slider_btn {
  transform: rotate(180deg);
  transition: transform 0.3s ease;
}

.toggle_slider_btn.rotate_down {
  transform: rotate(0deg);
}

.header_divider {
  width: 100%;
  height: var(--btn-border-width);
  background: var(--btn-border-color);
}

.header_slider {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

.information_bubble {
  display: flex;
  align-items: center;
  gap: 5px;
  border: 1px solid var(--solid-border-color);
  padding: 5px 15px;
  font-size: 14px;
  line-height: 1;
  border-radius: 28px;
}

.information_bubble image {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

.content_container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
  gap: 15px;
  width: 100%;
  flex-grow: 1;
  color: #000000;
  position: relative;
  padding-bottom: 15px;
}

.slider_con {
  width: calc(100% - 10px);
}

wx-slider .wx-slider-handle-wrapper {
  height: 6px;
}

/* 按钮样式覆盖 */
.btn-group-split__footer {
  justify-content: space-between;
}