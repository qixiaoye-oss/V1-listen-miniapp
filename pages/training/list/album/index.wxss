/* Album 列表页样式 */

/* ========== 1. 页面容器 ========== */
.album-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex-grow: 1;
  flex-shrink: 0;
}

/* ========== 2. 设置入口 ========== */
.album-settings-entry {
  display: flex;
  align-items: center;
}

.album-settings-entry__button {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 15px 5px;
  border-radius: 9px;
  font-size: 15px;
  line-height: 1;
}

.album-settings-entry__button image {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

/* ========== 3. 列表项 ========== */
.album-item {
  width: 100%;
  border: 1px solid transparent;
  background: transparent;
  border-radius: 9px;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  padding: 15px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.album-item__underpaint {
  position: absolute;
  left: 0;
  top: 0;
  height: 100px;
  z-index: -1;
}

.album-item__title {
  padding: 5px;
  border-radius: 6px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 5px;
  border: 1px solid #ffffff;
  background: transparent;
  position: relative;
  z-index: 10;
}

.album-item__icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

.album-item__text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 16px;
}
