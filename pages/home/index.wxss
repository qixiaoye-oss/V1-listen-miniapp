/* 首页样式 - 与 V1-jijing 对齐 */

/* ========== 0. 初始化提示（登录中） ========== */
.init-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 底部 tabBar 约 100rpx，向上偏移使视觉居中 */
  padding-bottom: 100rpx;
}

.init-loading__text {
  font-size: 15px;
  color: #999;
  background: linear-gradient(
    90deg,
    #999 0%,
    #999 40%,
    #ccc 50%,
    #999 60%,
    #999 100%
  );
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  animation: shimmer 1.5s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

/* ========== 1. 页面容器 ========== */
.home {
  display: flex;
  flex-direction: column;
  gap: 15px;
  margin: -20px;
  padding: 20px;
}

/* ========== 2. 分组区块 ========== */
.home-main-item {
  padding: 15px;
  border-radius: 9px;
  width: 100%;
  position: relative;
}

.home-main-item__notice {
  position: absolute;
  right: 15px;
  top: 15px;
  display: flex;
  align-items: center;
  padding: 5px;
  border-radius: 3px;
  gap: 5px;
}

.home-main-item__notice-img {
  width: 25px;
  height: 25px;
  flex-shrink: 0;
}

.home-main-item__notice-text {
  font-size: 15px;
  line-height: 1;
}


.home-main-item__title {
  font-weight: 600;
  text-align: left;
  margin-top: 5px;
  margin-bottom: 15px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 50%;
  font-size: 18px;
}

.home-main-item__content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item__content--grid {
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  grid-template-columns: repeat(2, 1fr);
}

/* ========== 3. 卡片样式 ========== */

/* 首页卡片基础样式 */
.home-card {
  overflow: hidden;
  border-radius: 6px;
  border: 1px solid transparent;
}

.home-card__content {
  padding: 15px;
  background: #ffffff;
  border-radius: 6px;
  position: relative;
}

/* 专项练习/套题训练卡片样式 */
.home-card--subject .home-card__header {
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.home-card--subject .home-card__icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
  position: relative;
  top: 2px;
}

.home-card--subject .home-card__title {
  font-size: 18px;
  font-weight: 600;
}

.home-card--subject .home-card__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

/* 补充说明卡片样式 */
.home-card--notice .home-card__content {
  padding: 15px;
}

/* 科普区域特殊样式 */
.home-main-item--science {
  background: #ffffff;
  border: 2px dotted var(--main-blue-color);
}

.home-card--science {
  background: #ffffff !important;
  border-color: var(--main-blue-color) !important;
}

.home-card--notice .home-card__category {
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.home-card--notice .home-card__body {
  font-size: 14px;
  font-weight: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  word-wrap: break-word;
  color: var(--main-gray-color);
}

.home-card--notice .home-card__body-title {
  color: #000000;
  font-weight: normal;
}

.home-card--notice .home-card__body-separator {
  color: var(--main-gray-color);
}

.home-card--notice .home-card__body-desc {
  color: var(--main-gray-color);
}

.home-card--notice .home-card__meta {
  margin-top: 10px;
  font-size: 12px;
  line-height: 1.4;
  display: flex;
  align-items: center;
  gap: 5px;
}

.home-card--notice .home-card__meta image {
  width: 14px;
  height: 14px;
}

/* ========== 4. 操作区域 ========== */

/* 查看所有操作区域 */
.home-view-all {
  margin-top: 15px;
  display: flex;
  align-items: center;
  font-size: 15px;
  line-height: 1;
}

/* 按钮靠右对齐 */
.home-view-all > tap-action {
  margin-left: auto;
}
