/* 首页样式 */

/* ========== 1. 页面容器 ========== */
.home {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

/* ========== 2. 分组区块 ========== */
.home-main-item {
  padding: 15px;
  border-radius: 9px;
  width: 100%;
  position: relative;
}

.home-main-item__notice {
  position: absolute;
  right: 15px;
  top: 15px;
  display: flex;
  align-items: center;
  padding: 5px;
  border-radius: 3px;
  gap: 5px;
}

.home-main-item__notice-img {
  width: 25px;
  height: 25px;
  flex-shrink: 0;
}

.home-main-item__notice-text {
  font-size: 15px;
  line-height: 1;
}


.home-main-item__title {
  font-weight: 600;
  text-align: left;
  margin-top: 5px;
  margin-bottom: 15px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 50%;
  font-size: 18px;
}

.home-main-item__content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item__content--grid {
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  grid-template-columns: repeat(2, 1fr);
}

/* ========== 3. 卡片样式 ========== */

/* 首页卡片基础样式 */
.home-card {
  overflow: hidden;
  border-radius: 6px;
  border: 1px solid transparent;
}

.home-card__content {
  padding: 15px;
  background: #ffffff;
  border-radius: 6px;
  position: relative;
}

/* 专项练习/套题训练卡片样式 */
.home-card--subject .home-card__header {
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.home-card--subject .home-card__icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
  position: relative;
  top: 2px;
}

.home-card--subject .home-card__title {
  font-size: 18px;
  font-weight: 600;
}

.home-card--subject .home-card__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

/* 补充说明卡片样式 */
.home-card--notice .home-card__content {
  padding: 15px;
}

.home-card--notice .home-card__category {
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.home-card--notice .home-card__body {
  font-size: 14px;
  font-weight: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  word-wrap: break-word;
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__body-title {
  color: #000000;
  font-weight: normal;
}

.home-card--notice .home-card__body-separator {
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__body-desc {
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__meta {
  margin-top: 10px;
  font-size: 12px;
  line-height: 1.4;
  display: flex;
  align-items: center;
  gap: 5px;
}

.home-card--notice .home-card__meta image {
  width: 14px;
  height: 14px;
}

/* ========== 4. 操作区域 ========== */

/* 查看所有操作区域 */
.home-view-all {
  margin-top: 15px;
  display: flex;
  align-items: center;
  font-size: 15px;
  line-height: 1;
}

/* 按钮靠右对齐 */
.home-view-all > tap-action {
  margin-left: auto;
}
