@import "style/default-styles.wxss";
@import "style/theme.wxss";
@import "style/page-loading.wxss";
@import "style/audio-loading.wxss";
@import "style/load-error.wxss";
@import "style/skeleton.wxss";
@import "style/button-group.wxss";
@import "style/tag.wxss";

page {
  background-color: #ffffff;
  padding: 20px;
  line-height: 1.4;
  font-size: 15px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

  /* 新样式---所有边框颜色 */
  --solid-border-color: rgba(0, 0, 0, 0.3);
  --dashed-border-color: rgba(0, 0, 0, 0.3);
  /* 主题色 */
  --theme-color: rgba(0, 166, 237, 1);
  --theme-bcakground-color: rgba(0, 166, 237, 0.15);

  /* ===== 参考项目变量系统（用于label页面样式复刻）===== */
  /* 基础颜色 */
  --color-1: #3478f6;
  --color-2: #00D26A;
  --color-5: #979797;
  --color-gray-6: rgba(151, 151, 151, 1);
  --base-color: #3478f6;

  /* 边框颜色 */
  --border-color-1: #3478f6;
  --border-color-2: #00D26A;
  --border-color-3: #d6e4fd;
  --border-color-4: #d7d7d7;
  --border-color-6: #f2f2f2;

  /* 背景颜色 */
  --background-color-1: #3478f6;
  --background-color-3: #d6e4fd;
  --background-color-4: #d7d7d7;
  --background-color-5: #fdebd3;
  --background-color-6: #f2f2f2;
}

view {
  box-sizing: border-box;
}

.dis {
  opacity: 0.3;
}

/*swtich整体大小及背景色*/
.wx-switch-input {
  position: relative;
  right: -3px;
}

.no-data {
  text-align: center;
  padding: 20px;
  font-size: 14px;
  color: #7f7f7f;
  margin-bottom: 10px;
}


/* 精听句子样式 */
.lh18 {
  line-height: 1.8;
}

.hidden_text {
  color: rgba(0, 0, 0, 0) !important;
}

