@import "style/default-styles.wxss";
@import "style/theme.wxss";
@import "style/page-loading.wxss";
@import "style/audio-loading.wxss";
@import "style/load-error.wxss";
@import "style/skeleton.wxss";
@import "style/button-group.wxss";
@import "style/tag.wxss";

page {
  background-color: #ffffff;
  padding: 20px;
  line-height: 1.4;
  font-size: 15px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

  /* ===== 统一主色定义 ===== */
  --main-gray-color: rgba(0, 0, 0, 0.3);
  --main-green-color: #00D26A;
  --main-blue-color: #00A6ED;
  --main-red-color: #F92F60;
  --main-orange-color: #FFB02E;

  /* ===== 主色半透明背景（15%不透明度）===== */
  --main-blue-color-bg: rgba(0, 166, 237, 0.15);
  --main-green-color-bg: rgba(0, 210, 106, 0.15);
  --main-red-color-bg: rgba(249, 47, 96, 0.15);
  --main-orange-color-bg: rgba(255, 176, 46, 0.15);

  /* ===== 兼容别名（指向主色）===== */
  --solid-border-color: var(--main-gray-color);
  --dashed-border-color: var(--main-gray-color);
  --theme-color: var(--main-blue-color);
  --theme-bcakground-color: var(--main-blue-color-bg);

  /* ===== 仍在使用的辅助变量 ===== */
  --color-1: #3478f6;
  --color-5: #979797;
  --color-gray-6: rgba(151, 151, 151, 1);
  --base-color: #3478f6;
  --border-color-1: #3478f6;
  --border-color-3: #d6e4fd;
  --border-color-4: #d7d7d7;
  --border-color-6: #f2f2f2;

  /* 背景颜色 */
  --background-color-1: #3478f6;
  --background-color-3: #d6e4fd;
  --background-color-4: #d7d7d7;
  --background-color-5: #fdebd3;
  --background-color-6: #f2f2f2;
}

view {
  box-sizing: border-box;
}

.dis {
  opacity: 0.3;
}

/*swtich整体大小及背景色*/
.wx-switch-input {
  position: relative;
  right: -3px;
}

.no-data {
  text-align: center;
  padding: 20px;
  font-size: 14px;
  color: #7f7f7f;
  margin-bottom: 10px;
}


/* 精听句子样式 */
.lh18 {
  line-height: 1.8;
}

.hidden_text {
  color: rgba(0, 0, 0, 0) !important;
}

