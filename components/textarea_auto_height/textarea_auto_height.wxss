.writing_container {
  display: flex;
  border-radius: 6px;
  border: 1px solid #e0e0e0;
  padding: 5px 0;
  position: relative;
  align-items: center;
  box-sizing: border-box;
}

.writing_cell {
  position: relative;
  width: calc(100% - 30rpx);
  min-height: 25px;
  line-height: 25px;
  background: rgba(0, 0, 0, 0);
  margin-left: 10px;
  z-index: 10;
}

.write_pla {
  position: absolute;
  font-size: 16px;
  color: rgba(151, 151, 151, 1);
  left: 10px;
  height: 25px;
  display: flex;
  align-items: center;
  z-index: 1;
}
