<view class="sentence-block">
  <!-- 原文部分：多个片段，可点击播放 -->
  <view class="sentence-block__text-container {{hidden ? 'sentence-block__text-container--hidden' : ''}}">
    <text
      wx:for="{{list}}"
      wx:key="index"
      class="sentence-block__text {{activeIndex == index ? 'sentence-block__text--active' : ''}}"
      bindtap="handleTap"
      id="{{idPrefix}}{{index}}"
      data-idx="{{index}}"
    >{{item.content}}</text>
  </view>
  <!-- 翻译部分：拆分成多个text元素，与原文处理方式一致 -->
  <view class="sentence-block__translate {{hidden ? 'sentence-block__translate--hidden' : ''}}">
    <text
      wx:for="{{translateParts}}"
      wx:key="index"
      user-select="{{true}}"
    >{{item}}</text>
  </view>
</view>
